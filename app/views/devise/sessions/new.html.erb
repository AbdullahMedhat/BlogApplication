<section class="hero">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-8 mx-auto">
        <div class="card border-none">
          <div class="card-body">
            <p class="mt-4  large-font lead text-center">Welcome!</p>
            <p class="mt-4 lead text-center">
                Sign in and show the world your Blogs!
            </p>
            <div id="error_explanation">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
            </div>
            <div class="mt-4">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", value: "", placeholder: "Enter email address"  %>

                </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "password", value: "", placeholder: "Enter password" %>
                  </div>
                  <label class="custom-control custom-checkbox mt-2">
                      <%= f.check_box :remember_me, class: "custom-control-input" %>
                      <span class="custom-control-indicator"></span>
                      <span class="custom-control-description ">Keep me logged in</span>
                  </label>
                  <%= f.submit "Sign in", class: "btn btn-primary float-right"%>
              <% end %>
              <div class="clearfix"></div>
              <p class="content-divider center mt-4"><span>or</span></p>
            </div>
            <p class="mt-4 social-login text-center">
                <%- if devise_mapping.omniauthable? %>
                  <%- resource_class.omniauth_providers.each do |provider| %>
                    <% if provider == :facebook %>
                      <%= link_to "", omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook ion-social-facebook" %>
                    <% elsif provider == :google_oauth2 %>
                      <%= link_to "", omniauth_authorize_path(resource_name, provider), class: "btn btn-google ion-social-googleplus" %>
                    <% end %>
                  <% end -%>
                <% end -%>
            </p>
            <p class="text-center">
                Don't have an account yet?
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Sign up", new_registration_path(resource_name) %><br />
                <% end -%>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
